{
  "browser": true,

  "jquery": true,

  // Define globals exposed by Node.js.
  "node": true,
  

  "camelcase": false,
  
  "loopfunc" : true,

  // Prohibit use of == and != in favor of === and !==.
  "eqeqeq": true,

  // Enforce tab width of 2 spaces.
  "indent": 2,

  // Prohibit use of a variable before it is defined.
  "latedef": true,

  "maxlen": 80,

  "newcap": true,

  // Enforce use of single quotation marks for strings.
  "quotmark": "single",

  // Enforce placing 'use strict' at the top function scope
  "strict": true,

  // Prohibit use of explicitly undeclared variables.
  "undef": true,

  "unused": true,

  // complexity rules
  "maxdepth": 2,
  "maxcomplexity": 5,

  "eqnull": true,

  "globals"   : {
    /* MOCHA */
    "describe"   : false,
    "it"         : false,
    "before"     : false,
    "beforeEach" : false,
    "after"      : false,
    "afterEach"  : false
  }
}